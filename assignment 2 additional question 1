#include <stdio.h>

int main() {
    int arr[] = {1, 8, 30, 40, 100};
    int n = 5, k = 60;
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[j] - arr[i] == k || arr[i] - arr[j] == k) {
                printf("Pair: %d %d\n", arr[i], arr[j]);
            }
        }
    }
    return 0;
}
