#include <stdio.h>   // part a
#include <string.h>
int main() {
    char a[100] = "Hello ", b[] = "World";
    strcat(a, b);
    printf("%s\n", a);
    return 0;
}
#include <stdio.h>   // part b
#include <string.h>
int main() {
    char a[] = "Apple", b[] = "Banana";
    int res = strcmp(a, b);
    if (res == 0) printf("Equal\n");
    else if (res < 0) printf("First is smaller\n");
    else printf("First is greater\n");
    return 0;
}
#include <stdio.h>  // part c
#include <string.h>
void sortStrings(char arr[][100], int n) {
    char temp[100];
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (strcmp(arr[i], arr[j]) > 0) {
                strcpy(temp, arr[i]);
                strcpy(arr[i], arr[j]);
                strcpy(arr[j], temp);
            }
        }
    }
}
int main() {
    char arr[3][100] = {"Banana", "Apple", "Cherry"};
    int n = 3;
    sortStrings(arr, n);
    for (int i = 0; i < n; i++) printf("%s\n", arr[i]);
    return 0;
}
#include <stdio.h>   // part d
#include <ctype.h>
int main() {
    char str[] = "hello world";
    for (int i = 0; str[i]; i++) str[i] = toupper(str[i]);
    printf("%s\n", str);
    return 0;
}
