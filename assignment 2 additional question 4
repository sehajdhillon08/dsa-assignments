#include <stdio.h>  // part a
#include <string.h>

int main() {
    char s1[100] = "Hello ";
    char s2[] = "World";
    strcat(s1, s2);
    printf("%s", s1);
    return 0;
}
#include <stdio.h>   // part b
#include <string.h>

int main() {
    char s1[] = "apple", s2[] = "banana";
    int result = strcmp(s1, s2);
    if (result == 0) printf("Equal");
    else if (result < 0) printf("s1 is smaller");
    else printf("s2 is smaller");
    return 0;
}
#include <stdio.h>    // part c
#include <string.h>

int main() {
    char arr[5][20] = {"banana", "apple", "cherry", "mango", "pear"};
    char temp[20];
    for (int i = 0; i < 5 - 1; i++) {
        for (int j = i + 1; j < 5; j++) {
            if (strcmp(arr[i], arr[j]) > 0) {
                strcpy(temp, arr[i]);
                strcpy(arr[i], arr[j]);
                strcpy(arr[j], temp);
            }
        }
    }
    for (int i = 0; i < 5; i++) printf("%s\n", arr[i]);
    return 0;
}
#include <stdio.h>  // part d
#include <ctype.h>

int main() {
    char str[] = "hello world";
    for (int i = 0; str[i] != '\0'; i++) str[i] = toupper(str[i]);
    printf("%s", str);
    return 0;
}
