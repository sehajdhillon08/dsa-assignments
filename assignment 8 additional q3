#include <bits/stdc++.h>
using namespace std;

struct Node{
    int val;
    Node *left,*right;
    Node(int x){val=x;left=right=NULL;}
};

Node* build(vector<int>&a){
    if(a[0]==-1) return NULL;
    Node* root=new Node(a[0]);
    queue<Node*> q;
    q.push(root);
    int i=1,n=a.size();
    while(!q.empty() && i<n){
        Node* cur=q.front(); q.pop();
        if(a[i]!=-1){cur->left=new Node(a[i]); q.push(cur->left);}
        i++;
        if(i<n && a[i]!=-1){cur->right=new Node(a[i]); q.push(cur->right);}
        i++;
    }
    return root;
}

int depth(Node* r){
    if(!r) return 0;
    return 1+max(depth(r->left), depth(r->right));
}

int main(){
    int t; cin>>t;
    while(t--){
        int n; cin>>n;
        vector<int>a(n);
        for(int i=0;i<n;i++) cin>>a[i];
        Node* root=build(a);
        cout<<depth(root)<<endl;
    }
}
