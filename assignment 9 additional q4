#include <bits/stdc++.h>
using namespace std;

int m,n;
vector<vector<int>> g;
vector<vector<int>> vis;

void dfs(int x,int y){
    vis[x][y]=1;
    int d[4][2]={{1,0},{-1,0},{0,1},{0,-1}};
    for(auto &p:d){
        int nx=x+p[0], ny=y+p[1];
        if(nx>=0 && ny>=0 && nx<m && ny<n && g[nx][ny]==1 && !vis[nx][ny])
            dfs(nx,ny);
    }
}

int main(){
    cin>>m>>n;
    g.assign(m, vector<int>(n));
    vis.assign(m, vector<int>(n,0));

    for(int i=0;i<m;i++)
        for(int j=0;j<n;j++)
            cin>>g[i][j];

    int cnt=0;
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            if(g[i][j]==1 && !vis[i][j]){
                cnt++;
                dfs(i,j);
            }
        }
    }
    cout<<cnt;
}
