#include <bits/stdc++.h>
using namespace std;

void heapify(vector<int>&a,int n,int i){
    int l=2*i+1, r=2*i+2, mx=i;
    if(l<n && a[l]>a[mx]) mx=l;
    if(r<n && a[r]>a[mx]) mx=r;
    if(mx!=i){
        swap(a[i],a[mx]);
        heapify(a,n,mx);
    }
}

int main(){
    int n; cin>>n;
    vector<int>a(n);
    for(int i=0;i<n;i++) cin>>a[i];

    for(int i=n/2-1;i>=0;i--) heapify(a,n,i);
    for(int i=n-1;i>=0;i--){
        swap(a[0],a[i]);
        heapify(a,i,0);
    }

    for(int x:a) cout<<x<<" ";
}
