#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* head = NULL;

void insert(int x) {
    Node* n = new Node();
    n->data = x;
    n->next = NULL;

    if (!head) {
        head = n;
        return;
    }
    Node* t = head;
    while (t->next) t = t->next;
    t->next = n;
}

void reverseList() {
    Node* prev = NULL;
    Node* curr = head;
    Node* next = NULL;

    while (curr) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }
    head = prev;
}

void display() {
    Node* t = head;
    while (t) {
        cout << t->data << "->";
        t = t->next;
    }
    cout << "NULL";
}

int main() {
    int arr[] = {1,2,3,4};
    for (int x : arr) insert(x);

    reverseList();
    display();
}
